{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
